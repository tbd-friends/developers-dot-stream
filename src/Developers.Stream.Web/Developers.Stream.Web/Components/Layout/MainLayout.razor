@rendermode InteractiveServer
@using System.Diagnostics.CodeAnalysis
@using Developers.Stream.Infrastructure.Auth
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@inherits LayoutComponentBase

<div class="page">
    <main>
        <div class="top-row px-4">
            <h3>developers//stream</h3>

            <AuthorizeView>
                <NotAuthorized>
                    <NavLink class="nav-link" href="Account/Login">Login</NavLink>
                    <NavLink class="nav-link" href="Account/Register">Register</NavLink>
                </NotAuthorized>
                <Authorized>
                    <NavLink class="nav-link" href="Account/Profile">Profile</NavLink>
                    <Button class="btn btn-secondary" @onclick="async() => await Logout()">Logout</Button>
                </Authorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {

    [Inject, AllowNull] private SignInManager<ApplicationUser> SignInManager { get; set; }

    private async Task Logout()
    {
        await SignInManager.SignOutAsync();
    }

}